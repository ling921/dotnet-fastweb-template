{
    "$schema": "http://json.schemastore.org/template",
    "author": "LingJing",
    "classifications": [
        "Common",
        "Code"
    ],
    "identity": "Ling.Templates.CRUD",
    "name": "CRUD Items",
    "shortName": "cruditems",
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "symbols": {
        "Prefix": {
            "type": "derived",
            "datatype": "string",
            "valueSource": "prefix",
            "valueTransform": "ReplaceProjectPrefix",
            "defaultValue": "Ling"
        },
        "Entity": {
            "type": "parameter",
            "datatype": "string",
            "description": "The name of the entity name",
            "replaces": "MyEntity",
            "defaultValue": "SampleEntity"
        }
    },
    "forms": {
        "ReplaceProjectPrefix": {
            "identifier": "replace",
            "pattern": "MyProject",
            "replacement": ""
        },
        "ReplaceEntityName": {
            "identifier": "replace",
            "pattern": "MyEntity",
            "replacement": ""
        }
    },
    "sources": [
        {
            "rename": {
                "MyProject": "Prefix"
            }
        }
    ]
}